<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nome do Site</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/global.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="/javascript/taskStructure.js"></script>
</head>

<body>
                      <%-include('./modalsUserArea.ejs')%>
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                          <a class="navbar-brand" href="/">TaskManager</a>
                          <form class="d-flex flex-grow-1">
                            <input class="form-control mr-2" type="search" placeholder="Pesquisar"
                              aria-label="Pesquisar">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
                          </form>
                          <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown">
                              <a class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <%= user.nome %>
                              </a>
                              <div class="dropdown-menu" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#">Configurações</a>
                                <a class="dropdown-item" href="/logout">Sair</a>
                              </div>
                            </li>
                          </ul>
                        </nav>
                        <div class="container mt-4">
                          <div class="row">
                            <aside class="col-md-2">
                              <h2>Projetos</h2>
                              <ul class="list-group" style="max-height: 200px; overflow-y: auto;">
                                <% userProjects.forEach(project=> { %>
                                  <li class="list-group-item"><a href="/projects/<%= project._id %>">
                                      <%= project.name %>
                                    </a></li>
                                  <% }); %>
                              </ul>
                              <div class="row justify-content-end">
                                <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                                  data-bs-target="#updateProject">Editar
                                  Projeto</button>
                                <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                                  data-bs-target="#deleteProject">Apagar
                                  Projeto</button>
                                <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                                  data-bs-target="#addMembers">Adicionar
                                  Membros</button>
                                <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                                  data-bs-target="#removeMembers">Apagar
                                  Membros</button>
                                <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                                  data-bs-target="#changeAdm">Trocar Líder do Projeto</button>
                              </div>
                            </aside>
                            <main class="col-md-10">
                              <ul class="nav nav-tabs" id="myTabs" role="tablist">
                                <li class="nav-item" role-presentation="">
                                  <button class="btn btn-success" data-bs-toggle="modal"
                                    data-bs-target="#createTask">Criar
                                    Nova
                                    Tarefa</button>
                                </li>
                              </ul>
                              <div class="row">
                                <div class="col-md-4" id="pending">
                                  <h3>Pendente</h3>
                                  <hr>
                                  <%= renderTask(tasks, project,'pending') %>
                                </div>

                                <div class="col-md-4" id="in progress">
                                  <h3>Em Andamento</h3>
                                  <hr>
                                  <%= renderTask(tasks, project,'in progress') %>
                                </div>

                                <div class="col-md-4" id="completed">
                                  <h3>Concluída</h3>
                                  <hr>
                                  <%= renderTask(tasks, project,'completed') %>
                                </div>
                              </div>
                            </main>
                          </div>
                        </div>
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                          crossorigin="anonymous"></script>
                        <script src="/javascript/styleButton.js"></script>
</body>

</html>a