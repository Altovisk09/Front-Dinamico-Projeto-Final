<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nome do Site</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/global.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <%-include('./modalsUserArea.ejs')%>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">TaskManager</a>
            <form class="d-flex flex-grow-1">
                <input class="form-control mr-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
            </form>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <%= user.nome %>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="#">Configurações</a>
                        <a class="dropdown-item" href="/logout">Sair</a>
                    </div>
                </li>
            </ul>
        </nav>
        <div class="container mt-4">
            <div class="row">
                <aside class="col-md-3">
                    <h2>Projetos</h2>
                    <ul class="list-group" style="max-height: 200px; overflow-y: auto;">
                        <% userProjects.forEach(project=> { %>
                            <li class="list-group-item"><a href="/projects/<%= project._id %>">
                                    <%= project.name %>
                                </a></li>
                            <% }); %>
                    </ul>
                    <div class="row justify-content-end">
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                            data-bs-target="#updateProject">Editar
                            Projeto</button>
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                            data-bs-target="#deleteProject">Apagar
                            Projeto</button>
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                            data-bs-target="#addMembers">Adicionar
                            Membros</button>
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal"
                            data-bs-target="#removeMembers">Apagar
                            Membros</button>
                        <button href="/projects/:id/change-adm" class="btn btn-primary mt-3" data-bs-toggle="modal"
                            data-bs-target="#changeAdm">Trocar Líder do Projeto</button>
                    </div>
                </aside>
                <main class="col-md-9">
                    <ul class="nav nav-tabs" id="myTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createTask">Criar
                                Nova
                                Tarefa</button>
                        </li>
                    </ul>
                    <div class="row">
                        <div class="col-md-4">
                            <h3>Pendente</h3>
                            <hr>
                            <% tasks.forEach(task=> { %>
                                <%if (task.state === 'pending') { %>
                                    <div class="md-4" id="taskCard">
                                    <div id="card-header">
                                        <h5 class="card-title">
                                            <%=task.name%>
                                        </h5>
                                        <div class="creator-circle">
                                            <%= task.creator.charAt(0).toUpperCase() %>
                                        </div>
                                    </div>
                                    <div id="card-content">
                                        <p class="card-text">
                                            <%= task.description.length> 80 ? task.description.slice(0, 80) + '...' :
                                                task.description %>
                                        </p>
                                    </div>
                                    <div id="card-footer">
                                        <div id="taskButtons">
                                            <button class="btn btn-primary rounded-circle task-button">
                                                <i class="bi bi-caret-right-fill"></i>
                                            </button>
                                            <button class="btn btn-secondary rounded-circle task-button">
                                                <i class="bi bi-chat-left-text-fill"></i>
                                            </button>
                                            <div class="btn-group">
                                                <button class="btn btn-secondary rounded-circle task-button"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-three-dots"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="#">Editar Tarefa</a></li>
                                                    <li><a class="dropdown-item" href="#">Excluir Tarefa</a></li>
                                                    <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#taskDescriptionModal<%= task._id %>">Ver Mais</a></li>
                                                </ul>
                                            </div>
                                            
                                        </div>
                                        <div id="deadlineBackground">
                                            <%function formatDate(date) { const options={ year: 'numeric' ,
                                                month: '2-digit' , day: '2-digit' }; return new
                                                Date(date).toLocaleDateString('pt-BR', options); }%>
                                                <p class="card-text">
                                                    <%= formatDate(task.deadline) %>
                                                </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal para a descrição completa -->
                                <div class="modal fade" id="taskDescriptionModal<%= task._id %>" tabindex="-1" aria-labelledby="taskDescriptionModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="taskDescriptionModalLabel"><%= task.name %></h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <%= task.description %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               <% } %>
                                <% }) %>
                        </div>

                        <div class="col-md-4">
                            <h3>Em Andamento</h3>
                            <hr>

                            <% tasks.forEach(task=> { %>
                                <%if (task.state === 'in progress') { %>
                                    <div class="md-4" id="taskCard">
                                    <div id="card-header">
                                        <h5 class="card-title">
                                            <%=task.name%>
                                        </h5>
                                        <div class="creator-circle">
                                            <%= task.creator.charAt(0).toUpperCase() %>
                                        </div>
                                    </div>
                                    <div id="card-content">
                                        <p class="card-text">
                                            <%= task.description.length> 80 ? task.description.slice(0, 80) + '...' :
                                                task.description %>
                                        </p>
                                    </div>
                                    <div id="card-footer">
                                        <div id="taskButtons">
                                            <button class="btn btn-primary rounded-circle task-button">
                                                <i class="bi bi-caret-right-fill"></i>
                                            </button>
                                            <button class="btn btn-secondary rounded-circle task-button">
                                                <i class="bi bi-chat-left-text-fill"></i>
                                            </button>
                                            <div class="btn-group">
                                                <button class="btn btn-secondary rounded-circle task-button"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-three-dots"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="#">Editar Tarefa</a></li>
                                                    <li><a class="dropdown-item" href="#">Excluir Tarefa</a></li>
                                                    <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#taskDescriptionModal<%= task._id %>">Ver Mais</a></li>
                                                </ul>
                                            </div>
                                            
                                        </div>
                                        <div id="deadlineBackground">
                                            <%function formatDate(date) { const options={ year: 'numeric' ,
                                                month: '2-digit' , day: '2-digit' }; return new
                                                Date(date).toLocaleDateString('pt-BR', options); }%>
                                                <p class="card-text">
                                                    <%= formatDate(task.deadline) %>
                                                </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal para a descrição completa -->
                                <div class="modal fade" id="taskDescriptionModal<%= task._id %>" tabindex="-1" aria-labelledby="taskDescriptionModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="taskDescriptionModalLabel"><%= task.name %></h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <%= task.description %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               <% } %>
                                <% }) %>
                        </div>
                        <div class="col-md-4">
                            <h3>Concluída</h3>
                            <hr>
                                <% tasks.forEach(task => { %>
                                    <%if (task.state === 'completed') { %>
                                        <div class="md-4" id="taskCard">
                                        <div id="card-header">
                                            <h5 class="card-title">
                                                <%=task.name%>
                                            </h5>
                                            <div class="creator-circle">
                                                <%= task.creator.charAt(0).toUpperCase() %>
                                            </div>
                                        </div>
                                        <div id="card-content">
                                            <p class="card-text">
                                                <%= task.description.length> 80 ? task.description.slice(0, 80) + '...' :
                                                    task.description %>
                                            </p>
                                        </div>
                                        <div id="card-footer">
                                            <div id="taskButtons">
                                                <button class="btn btn-primary rounded-circle task-button">
                                                    <i class="bi bi-caret-right-fill"></i>
                                                </button>
                                                <button class="btn btn-secondary rounded-circle task-button">
                                                    <i class="bi bi-chat-left-text-fill"></i>
                                                </button>
                                                <div class="btn-group">
                                                    <button class="btn btn-secondary rounded-circle task-button"
                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bi bi-three-dots"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="#">Editar Tarefa</a></li>
                                                        <li><a class="dropdown-item" href="#">Excluir Tarefa</a></li>
                                                        <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#taskDescriptionModal<%= task._id %>">Ver Mais</a></li>
                                                    </ul>
                                                </div>
                                                
                                            </div>
                                            <div id="deadlineBackground">
                                                <%function formatDate(date) { const options={ year: 'numeric' ,
                                                    month: '2-digit' , day: '2-digit' }; return new
                                                    Date(date).toLocaleDateString('pt-BR', options); }%>
                                                    <p class="card-text">
                                                        <%= formatDate(task.deadline) %>
                                                    </p>
                                            </div>
                                        </div>
                                    </div>
    
                                    <!-- Modal para a descrição completa -->
                                    <div class="modal fade" id="taskDescriptionModal<%= task._id %>" tabindex="-1" aria-labelledby="taskDescriptionModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="taskDescriptionModalLabel"><%= task.name %></h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <%= task.description %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                  <% } %>
                                <% }) %>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="/javascript/styleButton.js"></script>
</body>

</html>