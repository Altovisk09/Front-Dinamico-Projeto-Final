<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nome do Site</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/global.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">TaskManager</a>
    
        <form class="d-flex flex-grow-1">
            <input class="form-control mr-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
        </form>
    
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                <a class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= user.nome %>
                </a>
                <div class="dropdown-menu" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#">Configurações</a>
                    <a class="dropdown-item" href="/logout">Sair</a>
                </div>
            </li>
        </ul>
    </nav>
    <div class="container mt-4">
        <div class="row">
            <aside class="col-md-3">
                <h2>Projetos</h2>
                <ul class="list-group" style="max-height: 200px; overflow-y: auto;">
                    <% userProjects.forEach(project => { %>
                        <li class="list-group-item"><a href="/projects/<%= project._id %>"><%= project.name %></a></li>
                    <% }); %>
                </ul>
                <a href="/projects/create-project" class="btn btn-primary mt-3">Criar Novo Projeto</a>
            </aside>
            
            <main class="col-md-9">
                
                <div class="row">
                    <!-- Coluna "Pendente" -->
                    <div class="col-md-4">
                        <h3>Pendente</h3>
                        <hr>
                        <!-- Lista de tarefas pendentes -->
                        <ul>
                            <li>Tarefa 1</li>
                            <li>Tarefa 2</li>
                            <li>Tarefa 3</li>
                        </ul>
                    </div>

                    <!-- Coluna "Em Andamento" -->
                    <div class="col-md-4">
                        <h3>Em Andamento</h3>
                        <hr>
                        <!-- Lista de tarefas em andamento -->
                        <ul>
                            <li>Tarefa 4</li>
                            <li>Tarefa 5</li>
                        </ul>
                    </div>

                    <!-- Coluna "Concluída" -->
                    <div class="col-md-4">
                        <h3>Concluída</h3>
                        <hr>
                        <!-- Lista de tarefas concluídas -->
                        <ul>
                            <li>Tarefa 6</li>
                        </ul>
                    </div>
                </div> 
                <a href="/projects/<%= project ? project._id : 'null' %>/create-task" class="btn btn-success">Criar Nova Tarefa</a>

            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
