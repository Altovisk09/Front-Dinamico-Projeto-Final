<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nome do Site</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/global.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">TaskManager</a>

        <form class="d-flex flex-grow-1">
            <input class="form-control mr-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
        </form>

        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                <a class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= user.nome %>
                </a>
                <div class="dropdown-menu" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#">Configurações</a>
                    <a class="dropdown-item" href="/logout">Sair</a>
                </div>
            </li>
        </ul>
    </nav>
    <div class="container mt-4">
        <div class="row">
            <aside class="col-md-3">
                <h2>Projetos</h2>
                <ul class="list-group" style="max-height: 200px; overflow-y: auto;">
                    <% userProjects.forEach(project=> { %>
                        <li class="list-group-item"><a href="/projects/<%= project._id %>">
                                <%= project.name %>
                            </a></li>
                        <% }); %>
                </ul>
                <div class="row justify-content-end">
                    <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#updateProject">Editar
                        Projeto</button>
                    <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#deleteProject">Apagar
                        Projeto</button>
                    <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addMembers">Adicionar
                        Membros</button>
                    <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#removeMembers">Apagar
                        Membros</button>
                    <button href="/projects/:id/change-adm" class="btn btn-primary mt-3" data-bs-toggle="modal"
                        data-bs-target="#changeAdm">Trocar Líder do Projeto</button>
                </div>
                <div class="modal fade" id="updateProject" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Atualizar Projeto</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/projects/<%=project._id%>/update-project" method="POST">
                                    <div class="mb-3">
                                        <label for="projectName" class="form-label">Nome do Projeto</label>
                                        <input type="text" class="form-control" id="projectName" name="name">
                                    </div>
                                    <div class="mb-3">
                                        <label for="projectDeadline" class="form-label">Data de Entrega</label>
                                        <input type="date" class="form-control" id="projectDeadline" name="deadline">
                                    </div>
                                    <div class="mb-3">
                                        <label for="projectDescription" class="form-label">Descrição</label>
                                        <textarea class="form-control" id="projectDescription"
                                            name="description"></textarea>
                                    </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Confirmar</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="deleteProject" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/projects/<%=project._id%>/delete-project" method="POST">
                                    <p>Tem certeza que deseja apagar o projeto?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Confirmar</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="addMembers" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                    aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Adicionar Membros</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/projects/<%=project._id%>/add-members" method="POST">
                                    <div class="mb-3">
                                        <label for="projectMembers" class="form-label">Membros (Max: 4)</label>
                                        <input type="text" class="form-control" id="projectMembers" name="members">
                                    </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Confirmar</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="removeMembers" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Remover Membros</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/projects/<%=project._id%>/remove-members" method="POST">
                                    <div class="mb-3">
                                        <label for="projectMembers" class="form-label">Membros (Max: 4)</label>
                                        <input type="text" class="form-control" id="projectMembers" name="members">
                                    </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Confirmar</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="changeAdm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                    aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Mudar Lider do Projeto</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/projects/<%=project._id%>/change-adm" method="POST">
                                    <div class="mb-3">
                                        <label for="projectLeader" class="form-label">Selecione o novo líder do
                                            projeto:</label>
                                        <select name="leader" id="projectLeader" class="form-select">
                                            <option hidden></option>
                                            <% project.members.forEach(member=> { %>
                                                <% if (member !==project.leader) { %>
                                                    <option value="<%= member %>">
                                                        <%= member %>
                                                    </option>
                                                    <% } %>
                                                        <% }); %>
                                        </select>
                                    </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Confirmar</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </aside>

            <main class="col-md-9">

                <div class="row">
                    <!-- Coluna "Pendente" -->
                    <div class="col-md-5">
                        <h3>Pendente</h3>
                        <hr>
                        <!-- Lista de tarefas pendentes -->
                            <div class="md-4" id="taskCardBackground">
                                <div class="md-4" id="taskCard">
                                    <div id="card-header">
                                        <h5 class="card-title">Nome da Tarefa</h5>
                                        <p class="card-text">Nome do Criador</p>
                                    </div>
                                    <div id="card-content">
                                        <p class="card-text">Descrição da Tarefa</p>
                                    </div>
                                    <div id="card-footer">
                                        <button class="btn btn-primary rounded-circle">
                                            <i class="bi bi-caret-right"></i>
                                        </button>
                                        <button class="btn btn-secondary rounded-circle">
                                            <i class="bi bi-chat-left-text-fill"></i>
                                        </button>
                                        <button class="btn btn-secondary rounded-circle">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <div id="deadlineBackground">
                                            <p class="card-text">DD/MM/AAAA</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Coluna "Em Andamento" -->
                        <div class="col-md-4">
                            <h3>Em Andamento</h3>
                            <hr>
                            <!-- Lista de tarefas em andamento -->
                            <ul>
                                <li>Tarefa 4</li>
                                <li>Tarefa 5</li>
                            </ul>
                        </div>

                        <!-- Coluna "Concluída" -->
                        <div class="col-md-4">
                            <h3>Concluída</h3>
                            <hr>
                            <!-- Lista de tarefas concluídas -->
                            <ul>
                                <li>Tarefa 6</li>
                            </ul>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="/projects/<%=project._id%>/create-task" class="btn btn-success">Criar Nova Tarefa</a>
                        <a href="/projects/<%=project._id%>/create-task" class="btn btn-success">Editar Tarefa</a>
                        <a href="/projects/<%=project._id%>/create-task" class="btn btn-success">Apagar Tarefa</a>
                    </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>